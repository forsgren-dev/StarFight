<Window x:Class="SpaceFight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SpaceFight" Height="720" Width="1280" ResizeMode="NoResize" Background="Black"
        MouseMove="Window_MouseMove" 
        WindowStyle="None"
        WindowState="Maximized"
        Topmost="True" 
        KeyDown="Window_KeyDown"
        Focusable="True">
    <Grid>
        <Canvas Name="GameCanvas" ClipToBounds="True" Height="1800">
            <Image Name="Background1" Source="/images/space_bg3.png" Stretch="Fill" Width="2048" Height="1365" Canvas.ZIndex="0" />
            <Image Name="Background2" Source="/images/space_bg3.png" Stretch="Fill" Width="2048" Height="1365" Canvas.ZIndex="0" />
            <Image Name="Nebulosa" Source="/images/nebulosa.png" Stretch="Fill" Width="2048" Height="1365" Canvas.ZIndex="1" Opacity="0.08" />
            <Image Name="Player" Source="/images/player.png" Width="100" Height="100" Canvas.ZIndex="2" />
        </Canvas>

        <!-- Gamescreen (hidden at start) -->
        <TextBlock x:Name="WaveText"
                   Text="Wave: 0"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="20, 0, 0, 50"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"
                   Visibility="Collapsed"/>
        <TextBlock x:Name="HighScoreText"
            Text="Wave: 0"
            FontSize="24"
            FontWeight="Bold"
            Foreground="LightBlue"
            Margin="20, 10, 0, 0"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Visibility="Collapsed"/>
        <TextBlock x:Name="ScoreText"
                   Text="Score: 0"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="20"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"
                   Visibility="Collapsed"/>
        <TextBlock x:Name="LivesText"
           Text="Lives: 3"
           FontSize="24"
           FontWeight="Bold"
           Foreground="White"
           HorizontalAlignment="Right"
           VerticalAlignment="Bottom"
           Margin="20"
           Visibility="Collapsed"/>
        <TextBlock x:Name="ShieldText"
           Text="Shield: 3"
           FontSize="24"
           FontWeight="Bold"
           Foreground="LightBlue"
           HorizontalAlignment="Right"
           VerticalAlignment="Bottom"
           Margin="0,0,20,50"
           Visibility="Collapsed"/>
        
        <!-- Startscreen -->
        <Grid Name="StartScreen" Background="Transparent" Canvas.ZIndex="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="STARFIGHT!"
                           Foreground="White"
                           FontSize="80"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>
                <Button Content="START GAME"
                        Width="250"
                        Height="70"
                        FontSize="28"
                        FontWeight="Bold"
                        Click="StartGame_Click"/>
            </StackPanel>
            <TextBlock x:Name="InfoText"
                Text="Game &amp; Music: Erik Forsgren (2025) Esc/F11: Fullscreen toggle"
Foreground="LightBlue"
FontSize="18"
FontWeight="Bold"
HorizontalAlignment="Center"
VerticalAlignment="Center"
Margin="20"/>
        </Grid>
    </Grid>
</Window>
